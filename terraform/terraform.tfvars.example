# Exemple de fichier de variables Terraform
# Copiez ce fichier vers terraform.tfvars et remplissez les valeurs

# Configuration Google Cloud
project_id   = "your-gcp-project-id"
region       = "europe-west1"
zone         = "europe-west1-a"
cluster_name = "user-management-cluster"

# Environnement
environment = "dev"  # dev, int, ou prod

# Configuration du cluster
node_count    = 3
machine_type  = "e2-medium"
disk_size_gb  = 20
disk_type     = "pd-standard"

# Configuration de l'application
github_owner = "your-github-username"
image_tag    = "latest"
domain_name  = "your-domain.com"

# Secrets (à remplir avec vos vraies valeurs)
database_url = "postgresql://user:password@host:port/database"
jwt_secret   = "your-jwt-secret-here"
api_key      = "your-api-key-here"

# Configuration avancée
enable_autoscaling = true
min_node_count    = 1
max_node_count    = 10

# Configuration des ressources
cpu_request    = "100m"
memory_request  = "128Mi"
cpu_limit      = "500m"
memory_limit   = "512Mi"

# Configuration des probes
health_check_path = "/health"
liveness_probe_initial_delay  = 30
liveness_probe_period         = 10
readiness_probe_initial_delay = 5
readiness_probe_period        = 5

# Configuration de la maintenance
maintenance_window_start_time = "03:00"

# Configuration réseau
enable_network_policy = true
enable_http_load_balancing = true
enable_horizontal_pod_autoscaling = true
